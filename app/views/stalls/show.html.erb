<div class="splash2">
  <div class="pure-g-r">
    <div class="pure-u-1-3">
      <div class="l-box splash2-image">
        <%= image_tag @stall.qr_code.url, :width => 500, :height => 500 %>
      </div>
    </div>
    <div class="pure-u-2-3">
      <div class="l-box splash2-text">
        <h1 class="splash2-head">
          <%= @stall.name %>
        </h1>
        <h2 class="splash2-subhead">
          Throw this sucker up in a stall and watch modern art accumulate one splash at a time.
        </h2>
        <hr>
        <h2 class="splash2-subhead">
          <strong>Reading this?</strong>
        </h2>
        <h2 class="splash2-subhead">
          Scan this QR Code and show that you are the poet laureate of <strong><%= @stall.name %></strong>.
        </h2>
      </div>
    </div>
  </div>
</div>
