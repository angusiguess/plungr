<p id="notice"><%= notice %></p>

<div class="splash">
  <div class="pure-g-r">
    <div class="pure-u-1-3">
      <div class="l-box splash-image">
        <%= image_tag @stall.qr_code.url %>
      </div>
    </div>
    <div class="pure-u-2-3">
      <div class="l-box splash-text">
        <h1 class="splash-head">
          <%= @stall.name %>
        </h1>
        <h2 class="splash-subhead">
          Throw this sucker up in a stall and watch modern art accumulate one splash at a time.
        </h2>
        <h2 class="splash-subhead">
          Reading this? Scan this QR Code and show that you are the poet laureate of <%= @stall.name %>.
        </h2>
      </div>
    </div>
  </div>
</div>
